<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - MeteoStorm.InfoHub</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MeteoStorm</a>
      <div class="justify-content-end" id="navbarNavDropdown">
        @if (User.Identity.IsAuthenticated)
        {
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink" data-bs-dropdown>
                <a class="dropdown-item" asp-area="" asp-controller="Access" asp-action="Logout">Log Out</a>
              </div>
            </li>
          </ul>
        }
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      @if (User.Identity.IsAuthenticated)
      {
        <nav class="navbar navbar-expand-md navbar-light bg-light col-md-2 flex-md-column">
          <ul class="navbar-nav flex-md-column w-100">
            <li class="nav-item active">
              <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
          </ul>
        </nav>
      }
      <main role="main" class="col-md-10 ml-md-auto px-4 mt-3">
        @RenderBody()
      </main>
    </div>
  </div>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>